<h1>Add new Post</h1>

<%= form_for @post, :url => { :action => "create" } do |f| %>
  <p>
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %> <br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map{|c| [c.name, c.id]}, :prompt => "Select One" %> <br />
  </p>
  <p>
    <%= f.submit "Add post" %>
  </p>
<% end %>
