<h1>Edit post</h1>

<%= form_for @post, :url => { :action => "update" } do |f| %>
  <p>
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %> <br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map{|c| [c.name, c.id]}, :prompt => "Select One" %> <br />
  </p>
  <p>
    <%= f.submit "Update post" %>
  </p>
<% end %>
<%= link_to "Go Back", post_path %> | <%= link_to "Delete", @post, :confirm => "Are you sure?", :method => :delete %>
